@model IEnumerable<CentrumAdopcyjneZwierzat.Models.AdoptionCenter.Dog>

@{
    ViewData["Title"] = "Dogs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Dogs</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DogName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Breed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DogBirthYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VolunteerId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DogName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Breed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DogBirthYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VolunteerId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DogId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DogId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DogId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
